<div class="add-classification login-form">
  <h1><%= title %></h1>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  <form id="updateForm" action="/inv/update" method="POST" class="login">
   <div class="dropdown">
      <label for="classification_id">Classification:</label>
      <%- classificationSelect %>
   </div> 

    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>">

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>">

    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" placeholder="2016" required value="<%= inv_year %>">

    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" placeholder="Write vehicle description"><%= inv_description %></textarea>

    <label for="inv_image">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" placeholder="/images/vehiclea/camaro.jpg" value="<%= inv_image %>">

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" placeholder="/images/vehiclea/camaro.jpg" required value="<%= inv_thumbnail %>">

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" placeholder="$50,000" value="<%= inv_price %>">

    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" required value="<%= inv_miles %>">

    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" placeholder="green,yellow,red etc." value="<%= inv_color %>">

    <button type="submit" disabled >Update Vehicle</button>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</div>
<script src="/js/inv-update.js"></script>