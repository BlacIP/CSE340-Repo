<div class="add-classification login-form">
    <h1><%= title %></h1>
    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
    <form action="/inv/delete" method="post" class="login">
      <input type="hidden" name="inv_id" value="<%= inv_id %>">
      <p>Make: <input type="text" name="inv_make" value="<%= inv_make %>" readonly></p>
      <p>Model: <input type="text" name="inv_model" value="<%= inv_model %>" readonly></p>
      <p>Year: <input type="text" name="inv_year" value="<%= inv_year %>" readonly></p>
      <p>Price: <input type="text" name="inv_price" value="<%= inv_price %>" readonly></p>
      <p>Confirm Deletion - The delete is permanent.</p>
      <button type="submit">Delete Vehicle</button>
    </form>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</div>
<script src="/js/inv-update.js"></script>