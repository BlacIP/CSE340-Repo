<div class="reg-form login-form" >
  <h1 class="login-title"><%= title %></h1>
    <form action="/account/register" method="POST" class="register login">
      <div>
        <label for="account_firstname">First Name:</label>
        <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
      </div>
      <div>
        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">
      </div>
      <div>
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
      </div>
      <div>
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span>Passwords must be at least 12 Characters<br>Contain at least 1 number<br>1 Capital letter<br>1 Special Character</span> 
      </div>

      <button type="submit">Register</button>
    </form>
    <p class="reg-link"><a href="/account/login">Already have an account? Log in here</a></p>
</div>

<% if (errors) { %>
  <input type="hidden" id="hasErrors" value="true">
<% } %>

<!-- Modal for errors -->
<div id="errorModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <ul>
      <% if (errors) { %>
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      <% } %>
    </ul>
  </div>
</div>
