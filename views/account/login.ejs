<div class="login-form">
  <h1 class="login-title"><%= title %></h1>
    <% if (message) { %>
      <p class="flash-message"><%= message %></p>
    <% } %>
    <form id="loginForm" action="/account/login" method="POST" class="login">
      <div>
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required value="<%= account_email %>">
      </div>
      <div>
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span>Passwords must be at least 12 Characters<br>Contain at least 1 number<br>1 Capital letter<br>1 Special Character</span> 
      </div>
      <button type="submit">Login</button>
    </form>
    <p class="reg-link"><a href="/account/register">Don't have an account? Register here</a></p>
  
</div>

<% if (errors) { %>
  <input type="hidden" id="hasErrors" value="true">
<% } %>

<!-- Modal for errors -->
<div id="errorModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <ul>
      <% if (errors) { %>
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      <% } %>
    </ul>
  </div>
</div>
