<div class="management login-form">
  <h1>Account Management</h1>

<% if (message) { %>
  <p class="flash-message"><%= message %></p>
<% } %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<% if (locals.account) { %>
  <h2>Welcome <br> <%= locals.account.account_firstname %></h2>
  <p><a href="/account/update/<%= locals.account.account_id %>">Update Account Information</a></p>
  <% if (locals.account.account_type === 'Employee' || locals.account.account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Go to Inventory Management</a></p>
  <% } %>
<% } %>

</div>